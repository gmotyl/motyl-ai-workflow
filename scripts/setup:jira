#!/bin/bash
echo "ðŸ”§ Setting up Jira CLI..."
echo ""
echo "Manual setup required. See: docs/integration-jira.md"
echo ""
read -p "Enter your Jira instance URL: " JIRA_URL
read -p "Enter your Jira username: " JIRA_USER
read -sp "Enter your Jira API token: " JIRA_TOKEN
echo
echo "export JIRA_URL='$JIRA_URL'" >> ~/.bashrc
echo "export JIRA_URL='$JIRA_URL'" >> ~/.zshrc
echo "export JIRA_USER='$JIRA_USER'" >> ~/.bashrc
echo "export JIRA_USER='$JIRA_USER'" >> ~/.zshrc
echo "export JIRA_TOKEN='$JIRA_TOKEN'" >> ~/.bashrc
echo "export JIRA_TOKEN='$JIRA_TOKEN'" >> ~/.zshrc
echo "âœ… Jira setup complete"
